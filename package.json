{
  "name": "redux-claude",
  "version": "1.0.0",
  "description": "Plataforma médica con IA para clínicas latinoamericanas",
  "author": "",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "kill-port": "powershell -Command \"$port = Get-NetTCPConnection -LocalPort 3100 -ErrorAction SilentlyContinue | Select-Object -ExpandProperty OwningProcess; if ($port) { Stop-Process -Id $port -Force; Write-Host 'Killed process on port 3100' } else { Write-Host 'Port 3100 is free' }\"",
    "dev": "npm run kill-port && npm run build:core && next dev -p 3100",
    "build": "npm run build:core && next build",
    "build:core": "cd packages/cognitive-core && npm run build",
    "start": "next start",
    "lint": "next lint && eslint . --ext .ts,.tsx,.js,.jsx && npm run lint:core",
    "lint:core": "cd packages/cognitive-core && npm run lint",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix && npm run format",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit && npm run typecheck:core",
    "typecheck:core": "cd packages/cognitive-core && tsc --noEmit",
    "quality": "npm run typecheck && npm run lint && npm run format:check",
    "clean": "rm -rf .next && npm run clean:core",
    "clean:core": "cd packages/cognitive-core && npm run clean",
    "export": "npm run build",
    "netlify-build": "npm run build:core && next build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BernardUriza/redux-claude.git"
  },
  "keywords": [],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BernardUriza/redux-claude/issues"
  },
  "homepage": "https://github.com/BernardUriza/redux-claude#readme",
  "dependencies": {
    "@redux-claude/cognitive-core": "workspace:*",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/vite": "^4.1.12",
    "lightningcss": "^1.30.1",
    "next": "^15.4.6",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^5.0.3",
    "cypress": "^15.1.0",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.5.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
